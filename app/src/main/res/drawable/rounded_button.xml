<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#000000"/>
            <corners
                android:radius="12dp"/>

            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>

            <gradient
                android:angle="270"
                android:endColor="#2620ff"
                android:startColor="#2620ff"
                android:type="linear"
                android:centerColor="#2620ff"/>
        </shape>
    </item>
</selector>
	